<h2 class="page-title">記録画面</h2>


<%= form_with(model: @book, local: true, url: confirm_books_path) do |f| %>

  <% if @book.errors.any? %>
    <div>
      <h3><%= @book.errors.count %>件のエラーがあります</h3>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="book-form">
<div class="book-label">
  <%= f.label :title %>
</div>
<div>
  <%= f.text_field :title %>
</div>
<div class="book-label">
  <%= f.label :headline %>
</div>
<div>
  <%= f.text_field :headline %>
</div>
<div class="book-label">
  <%= f.label :content %>
</div>
<div class="book-field">
  <%= f.text_area :content, :size => "60x15" %>
</div>

  <%= f.submit "記録する", :class => "new-btn" %>
<% end %>
</div>
