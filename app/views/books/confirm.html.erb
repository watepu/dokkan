<h2>以下の内容で投稿します</h2>

<%= form_with(model: @book, local: true) do |f| %>
  <div>
  <%= f.label :title %>
  </div>
  <div>
  <%= f.text_field :title %>
  </div>

  <div>
  <%= f.label :headline %>
  </div>
  <div>
  <%= f.text_field :headline %>
  </div>

  <div>
  <%= f.label :content %>
  </div>
  <div class="input_field">
  <%= f.text_area :content %>
  </div>



  <%= f.submit "投稿する", :class => "submit_btn" %>

<% end %>
