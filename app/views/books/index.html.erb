<h2>記録一覧</h2>

<% @books.each do |book| %>
<div>
  <%= book.title %>
  <%= book.headline %>
  <%= book.content %>
</div>
<% end %>
<p>--------------------------</p>
<p>本メニュー</p>
<div>
<% @books.pluck(:title).uniq.each do |book| %>
<!-- pluckが配列を取得、uniqが重複を削除 -->
<div>
 <%= link_to book, "/books/title/#{book}" %>
</div>
<% end %>
</div>

<p>--------------------------</p>
<p>見出しメニュー</p>
<div>
<% @books.pluck(:headline).uniq.each do |book| %>
<div>
 <%= link_to book, "/books/headline/#{book}" %>
</div>
<% end %>
</div>

<p>--------------------------</p>
<p>BOOK1の内容</p>
  <% @books.where(title: "BOOK1").each do |book| %>
  <div>
    <%= book.headline %>
    <%= book.content %>
  </div>
  <% end %>

<p>--------------------------</p>
<p>節約の内容</p>
  <% @books.where(headline: "節約").each do |book| %>
  <div>
    <%= book.content %>
  </div>
  <% end %>

<p>--------------------------</p>

<%= link_to "BOOK1", "/books/title/BOOK1" %>
<%= link_to "節約", "/books/headline/節約" %>

<div>
<%= link_to "記録する", new_book_path %>
</div>
