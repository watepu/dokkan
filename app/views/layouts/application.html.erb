<!DOCTYPE html>
<html>
  <head>
    <title>Dokkan</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "トップへ", "/", class: "top-btn" %>
    <% if user_signed_in? %>
      <%= current_user.name %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "top-btn" %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path, class: "top-btn" %>
      <%= link_to "ログイン", new_user_session_path, class: "top-btn" %>
    <% end %>

    <% flash.each do |key,value| %>
      <%= content_tag(:div, value, class:"#{key}") %>
    <% end %>

    <%= yield %>
  </body>
</html>
